// Place your settings in this file to overwrite default and user settings.
{
  "editor.rulers": [80, 100],
  "editor.insertSpaces": true,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.pyc": true,
    "**/*.sublime-workspace": true,
    "**/bin": true,
    "**/obj": true,
    "**/StyleCop.Cache": true,
    "lib/**/*.sln": true
  },
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true
}
